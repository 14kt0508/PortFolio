<div class="container-fluid" style="margin-bottom: 50px;">
    <div class="center-block">
      <h2 class="user_title">職員一覧</h2>
    </div>
    <div class='col-10 offset-1 center-contents'>
	    <div class="table-responsive">
	        <table class='table table-hover'>
				<thead class="thead-light">
					<tr>
						<th>施設名</th>
						<th>氏名</th>
						<th>メールアドレス</th>
					</tr>
				</thead>

				<tbody>
					<% @admins.each do |admin| %>
						<tr>
							<td>
								<%= admin.facility.facility_name %>
							<td>
								<%= link_to admins_admin_path(admin.id) do %>
									<%= admin.family_name %><%= admin.first_name %>
							</td>
		            			<% end %>
							</td>

							<td>
								<%= admin.email %>
							</td>
						</tr>
					<% end %>
					<%= paginate @admins %>
				</tbody>
			</table>
		</div>
	</div>
</div>
