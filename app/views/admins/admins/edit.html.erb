<div class="center-block">
  <h2 class="admin_title">登録情報編集</h2>
</div>
<%= form_for(@admin, url: admins_admin_path(@admin)) do |f| %>
  <%= render 'layouts/errors', model: f.object %>
	<div class='col-6 offset-3 center-contents'>
	    <table class='table'>
		    <th>施設名</th>
		    <td>
		        <div class="field">
		          <%= f.select :facility_id, options_for_select(Facility.all.map{|i| [i[:facility_name], i[:id]] }), include_blank: "選択して下さい" %>
		        </div>
		    </td>
		    <tr>

		    <th>名前</th>
			    <td>
			        <div class="field">
			          <%= f.text_field :family_name,:size=>"20" %>
			          </div>
			    </td>
			    <td>
			        <div class="field">
			          <%= f.text_field :first_name,:size=>"20" %>
			        </div>
			    </td>
		    </tr>

		    <tr>
				<th>フリガナ</th>
				<td>
					<div class="field">
					  <%= f.text_field :family_name_kana,:size=>"20" %>
					</div>
				</td>
				<td>
					<div class="field">
					  <%= f.text_field :first_name_kana,:size=>"20" %>
					</div>
				</td>
		    </tr>

		    <th>メールアドレス</th>
		    <td>
		    	<div class="field blank">
		          	<%= f.text_field :email,:size=>"20" %>
		        </div>
		    </td>
	    </table>
		<div class="center-block">
			<div class="actions">
		    	<%= f.submit "更新"%>
			</div>
  		</div>
	</div>
<% end %>