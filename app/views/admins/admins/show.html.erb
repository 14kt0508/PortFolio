<div class='row'>

  <div class='col-xs-3'>
    <h2>職員情報</h2>
    <table class='table'>
      <tr>
        <th>施設名</th>
        <th><%= @admin_user.facility_id %>
        </th>
      </tr>

      <tr>
        <th>氏名</th>
        <th><%= @admin_user.family_name %><%= @admin_user.first_name %>
            (<%= @admin_user.family_name_kana %><%= @admin_user.first_name_kana %>)
        </th>
      </tr>

      <tr>

      <tr>
        <th>メールアドレス</th>
        <th><%= @admin_user.email %></th>
      </tr>
    </table>

    <%= link_to "編集", edit_admins_admin_path, class: "btn btn-primary btn-new-register btn-xs"; %>
  </div>
</div>