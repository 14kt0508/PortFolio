<div class="container-fluid">
    <div class="center-block">
      <h2 class="admin_title">職員情報</h2>
    </div>

    <div class='row'>
      <div class='col-6 offset-3 center-contents'>
        <div class="table-responsive">
          <table class='table table-hover'>
            <tr>
              <th>施設名</th>
              <th><%= @admin.facility.facility_name %>
              </th>
            </tr>

            <tr>
              <th>氏名</th>
              <th><%= @admin.family_name %><%= @admin.first_name %>
                  (<%= @admin.family_name_kana %><%= @admin.first_name_kana %>)
              </th>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <th><%= @admin.email %></th>
            </tr>
          </table>
          <%= link_to "編集", edit_admins_admin_path, class: "btn btn-primary btn-new-register btn-xs"; %>
        </div>
      </div>
    </div>
  </div>
</div>