<%= form_for @contact, url: {action: 'confirm'} do |f| %>
  <% if @contact.errors.any? %>
  <% end %>

  <div class="field">
    <%= f.label :対象クラス %><br>
    <% @class_names.each do |name| %>
      <%= check_box :class, :name,{ multiple: true }, name.id, nil %>
        <span><%= name.name %></span>
    <% end %>
  </div>


  <div class="field">
    <%= f.label :件名 %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :内容 %><br>
    <%= f.text_area :body %>
  </div>

  <div class="item-new-form">
    <%= f.attachment_field :image, id: "file_btn" %><br />
  </div>

  <div class="actions">
    <%= f.submit '確認する' %>
  </div>

<% end %>


