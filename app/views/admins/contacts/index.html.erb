<div class="container-fluid"  style="margin-bottom: 50px;">
    <div class="center-block">
      <h2 class="contact_title">連絡一覧</h2>
    </div>
    <p style="color:#EEE;"><%= flash[:success] %></p>
    <div class='col-10 offset-1 center-contents'>
	    <div class="table-responsive">
	        <table class='table table-hover'>
				<thead class="thead-light">
					<tr>
						<th>日付</th>
						<th>件名</th>
					</tr>
				</thead>

				<tbody>
					<% @contacts.each do |contact| %>
						<tr>
							<td>
								<%= contact.created_at.strftime('%Y/%m/%d') %>
							</td>
							<td>
								<%= link_to admins_contact_path(contact.id) do %>
								<%= contact.title %>
								<% end %>
							</td>
						</tr>
					<% end %>
					<%= paginate @contacts %>
				</tbody>
			</table>
		</div>
	</div>
</div>