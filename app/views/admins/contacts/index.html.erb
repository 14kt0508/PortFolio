<div class="container-fluid">
    <div class="center-block">
      <h2>連絡一覧</h2>
    </div>
    <p id="notice"><%= notice %></p>
    <div class='col-10 offset-1 center-contents'>
	    <div class="table-responsive">
	        <table class='table table-hover'>
				<thead class="thead-light">
					<tr>
						<th>件名</th>
						<th>内容</th>
					</tr>
				</thead>

				<tbody>
					<% @contacts.each do |contact| %>
						<tr>
							<td>
								<%= link_to admins_contact_path(contact.id) do %>
								<%= contact.title %>
								<% end %>
							</td>

							<td>
								<%= contact.body %>
							</td>
						</tr>
					<% end %>
					<%= paginate @contacts %>
				</tbody>
			</table>
		</div>
	</div>
</div>