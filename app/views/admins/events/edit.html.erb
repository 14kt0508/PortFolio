<div class="center-block">
    <h1>スケジュール編集</h1>
</div>
    <%#= form_with(model: @event, url: edit_admins_event_path(@event), method: :put) do |f| %>
<div class="center-block">
    <%= form_for(@event, url:admins_event_path(@event)) do |f| %>

        <div class="field">
            <h4>イベント名</h4>
            <span><%= f.text_field :title %></span>
        </div>

        <div class="field">
            <h4>開始日時</h4>
            <span><%= f.datetime_field  :start, placeholder: "XXXX-XX-XX", class:"field" %></span>
        </div>

        <div class="field">
            <h4>終了日時</h4>
            <span><%= f.datetime_field  :end, placeholder: "XXXX-XX-XX", class:"field" %></span>
        </div>

        <div class="field">
            <h4>詳細</h4>
            <span><%= f.text_area :body, size: "40x5" %></span>
        </div>

        <div class="field">
            <div class="actions">
                <%= f.submit "編集する", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
