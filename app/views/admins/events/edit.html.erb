<h4>スケジュール編集</h4>

    <%#= form_with(model: @event, url: edit_admins_event_path(@event), method: :put) do |f| %>

    <%= form_for(@event, url:admins_event_path(@event)) do |f| %>

        <table class='table'>
            <p>
                <span>タイトル</span>
                <span><%= f.text_field :title %></span>
            </p>

                    <span>開始日時</span>
                    <span><%= f.datetime_field  :start, placeholder: "XXXX-XX-XX", class:"field" %> ~ </span><br><br>

                    <span>終了日時</span>
                    <span><%= f.datetime_field  :end, placeholder: "XXXX-XX-XX", class:"field" %></span><br>

                    <span>詳細</span>
                    <span><%= f.text_area :body %></span>

                    <div class="actions">
                        <%= f.submit "編集する", class: "btn btn-primary" %>
                    </div>
                </table>
        <% end %>
