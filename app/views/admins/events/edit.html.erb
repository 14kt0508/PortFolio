<div class="container-fluid" style="margin-bottom: 50px;">
    <div class="center-block">
        <h1 class="event_title">スケジュール編集</h1>
    </div>

    <div class="center-block">
        <%= form_for(@event, url:admins_event_path(@event)) do |f| %>

            <div class="field">
                <h4 class="evnt_style">イベント名</h4>
                <span><%= f.text_field :title %></span>
            </div>

            <div class="field">
                <h4 class="evnt_style">対象クラス</h4>
                <span class="evnt_class_style"><%= f.collection_check_boxes :event_class_names, @class_names, :id, :name %></span>
            </div>

            <div class="field">
                <h4 class="evnt_style">開始日時</h4>
                <span><%= f.datetime_field  :start, placeholder: "XXXX-XX-XX", class:"field" %></span>
            </div>

            <div class="field">
                <h4 class="evnt_style">終了日時</h4>
                <span><%= f.datetime_field  :end, placeholder: "XXXX-XX-XX", class:"field" %></span>
            </div>

            <div class="field">
                <h4 class="evnt_style">詳細</h4>
                <span><%= f.text_area :body, size: "40x5" %></span>
            </div>

            <div class="field">
                <div class="actions" style="margin-top:10px">
                    <%= f.submit "編集する", class: "btn btn-primary" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
