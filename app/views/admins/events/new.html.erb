<div class="center-block">
	<h1>イベント新規登録</h1>
</div>

<div class="center-block">

	<%= form_for(@event, url:admins_events_path) do |f| %>

		<h4 style="margin-top:10px">イベント名</h4>
		<%= f.text_field :title %>


		<h4 style="margin-top:10px">開始時間</h4>
		<%= f.datetime_field  :start, placeholder: "XXXX-XX-XX", class:"field" %>

		<h4 style="margin-top:10px">終了時間</h4>
		<%= f.datetime_field  :end, placeholder: "XXXX-XX-XX", class:"field" %>


	 	<h4 style="margin-top:10px">対象クラス</h4>
		<% @class_names.each do |name| %>
			<div>
	            <%= check_box :class, :name,{ multiple: true }, name.id, nil %>
	        	<span><%= name.name %></span>
	        </div>
	    <% end %>

		<h4 style="margin-top:10px">イベント内容</h4>
		<%= f.text_area :body, size: "40x5"  %>

		<div class="actions" style="margin-top:10px">
			<%= f.submit '投稿', class: "btn btn-primary" %>
		</div>
	<% end %>
</div>