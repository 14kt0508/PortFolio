<div class="user_background">
  <div class="container-fluid">
    <div class="center-block">
      <h2><span class="marker_title">送迎者情報登録</span></h2>
    </div>
    <p id="notice"><%= notice %></p>
  	<%= form_with model: @pick_up_person, url: pick_up_persons_path, method: :post ,local:true do |f| %>
  	 <%= render 'layouts/errors', model: f.object %>
  	  <div class='col-6 offset-3 center-contents'>
        <div class="table-responsive">
          <table class='table table-hover'>
            <tr>
              <th class="marker">名前</th>
              <td>
                <div class="field">
                  <%= f.text_field :family_name, class: "form-control", autofocus: true, placeholder:"田中", autocomplete: "family_name" %>
                  </div>
              </td>
              <td>
                <div class="field">
                  <%= f.text_field :first_name, class: "form-control", autofocus: true, placeholder:"太郎", autocomplete: "first_name" %>
                </div>
              </td>
            </tr>

            <tr>
              <th class="marker">フリガナ</th>
              <td>
                <div class="field">
                  <%= f.text_field :family_name_kana, class: "form-control", autofocus: true, placeholder:"タナカ", autocomplete: "family_name_kana" %>
                </div>
              </td>
              <td>
                <div class="field">
                  <%= f.text_field :first_name_kana, class: "form-control", autofocus: true, placeholder:"タロウ", autocomplete: "first_name_kana" %>
                </div>
              </td>
            </tr>

            <tr>
              <th class="marker">生年月日</th>
              <td>
                  <div class="birth_date_field">
                    <%= f.date_select(
                          :birth_date,
                          use_month_numbers: true,
                          start_year: 1930,
                          end_year: (Time.now.year),
                          default: Date.new(1989, 1, 1))%>
                  </div>
              </td>
            </tr>

            <tr>
              <th class="marker">郵便番号</th>
              <td>
                <div class="field blank">
                  <%= f.number_field :post_code, class: "form-control", autofocus: true, placeholder:"1234567", autocomplete: "post_code" %>
                </div>
              </td>
            </tr>

            <tr>
              <th class="marker">住所</th>
              <td>
                <div class="field blank" >
                  <%= f.text_field :address, class: "form-control", autofocus: true, placeholder:"東京都OOO", autocomplete: "address" %>
                </div>
              </td>
            </tr>

            <tr>
              <th class="marker">電話番号(ハイフンなし)</th>
              <td>
                <div class="field blank">
                  <%= f.number_field :telephone, class: "form-control", autofocus: true, placeholder:"00012345678", autocomplete: "telephone" %>
                </div>
              </td>
            </tr>

            <tr>
              <th class="marker">関係性</th>
              <td>
                <div class="field blank">
                  <%= f.text_field :relationship, class: "form-control", autofocus: true, placeholder:"父", autocomplete: "relationship" %>
                </div>
              </td>
            </tr>
          </table>
          <div class="actions">
            <%= f.submit "登録", class: "btn btn-success btn-xs"; %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>